FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      ST;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 500*exp(-0.3/(T+0.1));

boundaryField
{
    right
    {
        type            fixedValue;
	value		uniform 500*exp(-0.3/(1+0.1));
    }

    left
    {
        type            fixedValue;
        value           uniform 500*exp(-0.3/0.1);
    }

    top
    {
        type            zeroGradient;
    }
     
    bottom
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            empty;
    }
}

